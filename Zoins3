-- Zoins3.lua | إعدادات + واجهة GUI

-- إنشاء زر بسيط
function CreateButton(name, callback)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0, 50, 0, 50)
    button.Text = name
    button.Parent = screenGui
    
    button.MouseButton1Click:Connect(callback)
end

-- مثال: زر لتفعيل الطيران
CreateButton("Toggle Fly", function()
    _G.FlyEnabled = not _G.FlyEnabled
    Notify("Zoins Hub", "Fly: "..tostring(_G.FlyEnabled))
end)

-- مثال: زر لتفعيل AutoFarm
CreateButton("Toggle AutoFarm", function()
    _G.AutoFarm = not _G.AutoFarm
    Notify("Zoins Hub", "AutoFarm: "..tostring(_G.AutoFarm))
end)
